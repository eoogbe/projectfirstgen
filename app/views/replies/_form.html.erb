<%= semantic_form_for reply, url: comment_replies_path(comment, reply), namespace: "comment#{comment.id}", as: :reply, html: { role: "form", id: "comment#{comment.id}_new_reply" } do |f| %>
  <%= f.inputs do %>
    <%= f.input :text, input_html: { rows: 5, "aria-label" => "Reply text" }, label: false %>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, label: :reply, button_html: { class: "btn btn-primary" } %>
  <% end %>
<% end %>
