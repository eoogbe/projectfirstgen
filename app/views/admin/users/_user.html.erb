<tr>
  <td><%= user.username %></td>
  <td><%= user.name %></td>
  <td><%= user.email %></td>
  <td><%= user.role %></td>
  <td><%= user.confirmed? ? "active" : "inactive" %></td>
  <td class="text-right"><%= user.articles.count %></td>
  <td><%= user.last_sign_in_ip %></td>
  <td><%= user.sign_in_count %></td>
  <td>
    <% if user.last_sign_in_at %>
      <%= local_time user.last_sign_in_at %>
    <% end %>
  </td>
  <td>
    <% unless current_user?(user) %>
      <%= link_to "edit", edit_user_path(user) %>
      <%= button_to "delete", user, method: :delete, data: { confirm: "Are you sure?" }, class: "btn-link" %>
    <% end %>
  </td>
</tr>
