<tr>
  <td><%= user.username %></td>
  <td><%= user.name %></td>
  <td><%= user.email %></td>
  <td><%= user.role %></td>
  <td class="text-right"><%= user.articles.count %></td>
  <td><%= user.last_sign_in_ip %></td>
  <td><%= user.sign_in_count %></td>
  <td>
    <% if user.last_sign_in_at %>
      <%= time_tag user.last_sign_in_at do %>
        <%= local_time user.last_sign_in_at %>
      <% end %>
    <% end %>
  </td>
</tr>
