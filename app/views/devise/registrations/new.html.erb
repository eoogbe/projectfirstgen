<% provide(:title, "Sign Up") %>
<% provide(:heading, "Sign up") %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: "form" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email, class: "control-label" %>
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :password, class: "control-label" %>
    <% if @validatable %>
    <em class="hint">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class: "control-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :name, class: "control-label" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <fieldset>
    <legend class="control-label">Program</legend>
    <div class="radio">
      <%= label_tag :program_undergrad, class: "control-label" do %>
        <%= radio_button_tag :program, :undergrad, resource.undergrad?, required: true, "aria-required" => "true" %>
        Undergraduate
      <% end %>
    </div>
    <div class="radio">
      <%= label_tag :program_grad, class: "control-label" do %>
        <%= radio_button_tag :program, :grad, resource.grad?, required: true, "aria-required" => "true" %>
        Graduate
      <% end %>
    </div>
  </fieldset>
  
  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

