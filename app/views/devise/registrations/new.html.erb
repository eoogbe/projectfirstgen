<% provide(:title, "Sign Up") %>
<% provide(:heading, "Sign up") %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: "form" }) do |f| %>
  <%= devise_error_messages! %>

  <fieldset>
    <legend class="control-label">School</legend>
    <div class="radio">
      <label>
        <%= f.radio_button :school, :atu, required: true, "aria-required" => "true" %>
        Arkansas Tech Univerity
      </label>
    </div>
    <div class="radio">
      <label>
        <%= f.radio_button :school, :stanford, required: true, "aria-required" => "true" %>
        Stanford
      </label>
    </div>
  </fieldset>

  <div class="form-group">
    <%= f.label :email, class: "control-label" %>
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "control-label" %>
    <% if @validatable %>
    <em class="hint">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class: "control-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :name, class: "control-label" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <fieldset>
    <legend class="control-label">Program</legend>
    <div class="radio">
      <label>
        <%= f.radio_button :role, :undergrad, required: true, "aria-required" => "true" %>
        Undergraduate
      </label>
    </div>
    <div class="radio">
      <label>
        <%= f.radio_button :role, :grad, required: true, "aria-required" => "true" %>
        Graduate
      </label>
    </div>
  </fieldset>


  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
