<%= semantic_form_for [article, comment] do |f| %>
  <%= f.inputs do %>
    <%= f.input :text, input_html: { rows: 5, "aria-label" => "Question text" }, label: false %>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, label: :comment, button_html: { class: "btn btn-primary" } %>
  <% end %>
<% end %>
